<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/feather-icons/feather.js"></script>
</head>
<body>
    <nav class="navbar navbar-light bg-ligth navbar-fixed-top" style="background-color: #eb4799;">
        <a class="navbar-brand" href="@Url.Action("Index", "Items")" >
            <i data-feather="shopping-bag" width="30" height="30" alt=""></i>
        </a>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
<script>
    feather.replace()
</script>
 